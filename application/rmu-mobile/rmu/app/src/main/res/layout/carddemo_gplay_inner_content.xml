<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/card_title"
        android:textSize="15sp"
        android:textColor="#333"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/carddemo_gplay_main_inner_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:max="5"
        style="@style/carddemo_myapps_main_inner_ratingbar"
        android:backgroundTint="@color/red_dark_holo"
        android:isIndicator="true"
        android:stepSize="0.1"/>

    <TextView
        android:id="@+id/carddemo_gplay_main_inner_title"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:textColor="#D4a017"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/carddemo_gplay_main_inner_subtitle"
        android:textSize="11sp"
        android:textColor="#BBB"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/card_stock"
        android:textSize="11sp"
        android:textColor="#BBB"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>


