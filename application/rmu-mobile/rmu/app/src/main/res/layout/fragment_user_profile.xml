<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_gravity="center"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@color/nliveo_white">

    <RelativeLayout
        android:layout_weight="1.7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bangkit"
            app:riv_corner_radius="0dp"
            app:riv_border_width="3dip"
            app:riv_oval="true"
            app:riv_border_color="#FFFFFF"/>
        <!--<ImageView-->
        <!--android:id="@+id/changeImgUserProfile"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:contentDescription="image"-->
        <!--android:clickable="true"-->
        <!--android:paddingTop="10dp"-->
        <!--android:paddingRight="10dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingBottom="25dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/ic_satellite_grey600_24dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="15dp"
        android:background="@color/gray_dark_lighter">
        <TextView
            android:id="@+id/txNameUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:hint="Nama    : Bangkit Pratolo"
            android:paddingTop="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Edit image icon"
            android:clickable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_black_24dp_green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="5dp"
        android:background="@color/gray_dark_lighter">
        <TextView
            android:id="@+id/txJabatanUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Jabatan : Duty Manager"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgJabatanUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Edit image icon"
            android:clickable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_black_24dp_green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="5dp"
        android:background="@color/gray_dark_lighter">
        <TextView
            android:id="@+id/txEmailUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email : bangkit@tripoin.com"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Edit image icon"
            android:clickable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_black_24dp_green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:layout_marginTop="5dp"
        android:background="@color/gray_dark_lighter">
        <TextView
            android:id="@+id/txSummmaryUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Summary :\nBekerja sebagai pengggung jawab semua kegiatan yang berkaitan dengan Quality Of Services."
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgSummaryUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Edit image icon"
            android:clickable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_edit_black_24dp_green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>