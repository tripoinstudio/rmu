<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white_base">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/menuName"/>

    <!--<com.tripoin.rmu.view.ui.RoundedImageView
        android:padding="2dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_height="400dp"
        android:layout_width="400dp"
        android:background="@drawable/background_border_img"
        android:id="@+id/menuImage"/>-->

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_border_img"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:layout_height="match_parent"/>
        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            custom:selected_color="#0095BF"
            custom:unselected_color="#55333333"
            custom:selected_drawable="@drawable/bird"
            custom:shape="oval"
            custom:selected_padding_left="5dp"
            custom:selected_padding_right="5dp"
            custom:unselected_padding_left="5dp"
            custom:unselected_padding_right="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            custom:selected_width="6dp"
            custom:selected_height="6dp"
            custom:unselected_width="6dp"
            custom:unselected_height="6dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_border_img"

            />
        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator2"
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_border_img"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:editable="false"
            android:id="@+id/lbl_available"
            android:text="Makanan"
            android:textSize="18sp"
            android:textColor="@color/black_light"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lbl_price"
            android:gravity="right"
            android:editable="false"
            android:textSize="22sp"
            android:textColor="#D4a017"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:background="#4CAF50"
            android:id="@+id/bt_minus"
            android:textColor="@color/white_base"
            android:text="-"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity = "center"
            android:editable="false"
            android:layout_marginLeft="35dp"
            android:paddingTop="0dip"
            android:paddingBottom="5dip"
            android:id="@+id/lbl_quantity"
            android:textSize="20sp"
            android:textColor="@color/black_light"
            android:background="@drawable/background_border_qty"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:background="#4CAF50"
            android:id="@+id/bt_plus"
            android:textColor="@color/white_base"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:numStars="5"
                android:max="5"
                style="@style/carddemo_myapps_main_inner_ratingbar"
                android:backgroundTint="@color/red_dark_holo"
                android:isIndicator="true"
                android:stepSize="0.1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:text="Stock Information"
                android:id="@+id/lbl_stock_information"
                android:textSize="18sp"
                android:textColor="@color/black_light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:editable="false"
                android:id="@+id/lbl_no_information"
                android:text="-No Information-"

                android:textSize="13sp"
                android:textColor="@color/black_light"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:background="#4CAF50"
            android:textColor="@color/white_base"
            android:text="Back"
            android:id="@+id/btn_back"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:background="@color/nliveo_blue_colorPrimaryDark"
                android:textColor="@color/white_base"
                android:text="Order"
                android:id="@+id/btn_order"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>